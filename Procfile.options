app_name: roombooking
log_root: log
pid_root: tmp/pids
console_command: bundle exec rails console
env:
  RAILS_ENV: production
  RACK_TIMEOUT_SERVICE_TIMEOUT: 5
processes:
  web:
    log_file_name: puma.log
    restart_mode: usr1
    term_signal: TERM
  worker:
    log_file_name: sidekiq-worker.log
    restart_mode: start-term
    term_signal: TERM
  mailer:
    log_file_name: sidekiq-mailer.log
    restart_mode: start-term
    term_signal: TERM
