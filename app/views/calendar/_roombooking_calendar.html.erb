    <%= link_to 'Previous', calendar.url_for_previous_view %>
    <span class="calendar-title">
      <% week_start_date = start_date.at_beginning_of_week%>
      <%= @venue.name %> bookings for the week of <%= week_start_date.strftime("%a #{week_start_date.day.ordinalize} %b") %>
    </span>
    <%= link_to 'Next', calendar.url_for_next_view %>
  </div>
</div>

