<nav class="navbar navbar-expand-lg navbar-adc">
  <%= link_to root_path, class: 'navbar-brand' do %>
    <img src="/logo-long-white.svg" alt="Room Booking" width="160">
  <% end %>
  <button class="navbar-toggler adc-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav">
      <%= render 'layouts/navbar_pages' %>
      <%= render 'layouts/navbar_controllers' %>
      <%= render 'layouts/navbar_login' %>
    </ul>
  </div>
  <%= form_tag search_bookings_path, class: 'form-inline', method: :get do %>
    <% query_string = (controller.controller_name != 'users') ? params['q'] : nil %>
    <%= search_field_tag :q, query_string, placeholder: 'Search bookings', class: 'form-control mr-sm-2' %>
    <%= submit_tag 'Search', class: 'btn btn-outline-light my-2 my-sm-0'  %>
  <% end  %>
</nav>
