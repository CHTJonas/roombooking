<% content_for :title, 'Configure Shows' %>
<% content_for :heading, 'Configure Shows' %>

<p>
  Here you can import shows from Camdram that aren't yet known to the internals of Room Booking.
  Once they're imported you can activate and deactivate them, as well as set limits on the number of bookings they're allowed.
</p>

<table class="table table-condensed table-bordered table-hover">
  <thead>
    <%= content_tag :tr do %>
      <%= content_tag(:td, 'Name') %>
      <%= content_tag(:td, 'Action') %>
      <%= content_tag(:td, 'Rehearsal hours per week') %>
      <%= content_tag(:td, 'Audition hours per week') %>
      <%= content_tag(:td, 'Meeting hours per week') %>
    <% end %>
  </thead>
  <tbody>
    <% @shows.each do |show| %>
      <%= content_tag :tr do %>
        <%= content_tag(:td, show.name) %>
        <%= content_tag(:td, (actions_for_show show)) %>
        <%= content_tag(:td, (rehearsal_picker_for_show show)) %>
        <%= content_tag(:td, (audition_picker_for_show show)) %>
        <%= content_tag(:td, (meeting_picker_for_show show)) %>
      <% end %>
    <% end %>
  </tbody>
</table>
