<% content_for :title, @room.name %>
<% content_for :heading, 'Room Calendar' %>
<% content_for :controller_links do %>
  <%= link_to 'Back to Rooms', rooms_path, class: 'btn btn-outline-secondary my-md-1' %>
  <%= link_to 'Edit', edit_room_path(@room), class: 'btn btn-outline-primary my-md-1' if can? :manage, @room %>
  <%= link_to 'Delete', room_path(@room), method: :delete, data: { confirm: 'Are you sure?' },
    class: 'btn btn-outline-danger my-md-1' if can? :manage, @room %>
<% end %>

<% if @room.notes %>
  <%= content_tag :p, @room.notes, class: 'mb-4' %>
<% end %>

<%= render 'calendar' %>

<%= content_tag :div, class: 'float-right mt-1' do %>
  <%= link_to room_path(@room, format: :ics), class: 'btn btn-link' do %>
    <i class="fa fa-calendar"></i> Subscribe to iCal
  <% end %>
<% end %>
