<% content_for :title, 'Rooms' %>
<% content_for :heading, 'Rooms' %>
<% content_for :controller_links do %>
  <%= link_to 'New room', new_room_path, class: 'btn btn-outline-success' %>
<% end if can? :create, Room %>

<ul>
  <% @rooms.each do |room| %>
    <%= render room %>
  <% end %>
</ul>

<%= content_tag :div, class: 'float-right mt-1' do %>
  <%= link_to fa_icon('calendar', text: 'Subscribe to iCal'), rooms_path(format: :ics), class: 'btn btn-link' %>
<% end %>
