<div id="recent-bookings" class="my-3 p-3 bg-white rounded shadow-sm">
  <h6 class="border-bottom border-gray pb-2 mb-0">All Recent Bookings</h6>
  <% if @bookings.count > 0 %>
    <% @bookings.each do |booking| %>
      <%= render 'booking_strip', booking: booking %>
    <% end %>
  <% else %>
    <div id="recent-bookings-container" class="d-flex justify-content-center">
      <p class="mt-4 my-3">No bookings have been made yet!</p>
    </div>
  <% end %>
</div>
