<%= form_with model: @booking, local: true do |form| %>

  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :notes, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :notes, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :when, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :when, data:{ toggle: 'datetimepicker', target: '#booking_when' }, class: 'form-control datetimepicker-input' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :length, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :length, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :venue_id, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.collection_select :venue_id, Venue.order(:name), :id, :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row mt-2">
    <div class="col-sm-10">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
